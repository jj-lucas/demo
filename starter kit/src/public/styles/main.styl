// font-family: 'Share Tech Mono'
@import url('http://fonts.googleapis.com/css?family=Share+Tech+Mono')

// font-family: 'Titillium Web'
@import url('https://fonts.googleapis.com/css?family=Titillium+Web:400,700,400italic&subset=latin,latin-ext')

@import 'modules/variables'

body 
	font-family 'Titillium Web', sans-serif
	background #eee

#abort 
	display none
	opacity 0
	position fixed
	z-index 9999
	width 100%
	height 100%
	top 0
	left 0
	background rgba(123, 0, 0, 0.84)

	.sign 
		position absolute
		width  720px
		height 623px
		top 50%
		left 50%
		margin -310px 0 0 -360px
		background url('../img/abort.png')
		
	.failure
		position absolute
		width  265px
		height 140px
		bottom 30px
		right 30px
		background url('../img/failure.png')
		
.spinner
	background-image url('../img/loader.gif')
	width 200px
	height 300px
	display block
	margin auto
	
	&.off
		display none

